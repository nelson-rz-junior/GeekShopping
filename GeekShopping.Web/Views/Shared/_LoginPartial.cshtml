<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-success" href="#">
                <strong>Hello, @User.Identity.Name!</strong>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-action="Logout" asp-controller="Home">
                <strong>Logout</strong>
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-success" asp-action="Login" asp-controller="Home">
                <strong>Login</strong>
            </a>
        </li>
    }
</ul>
