@using GeekShopping.Web.Utils;
@model ProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<form asp-action="Delete">
    <div class="container border p-3">
        <h3 class="text-success">Delete Product</h3>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Id" class="form-label"></label>
            </div>
            <div class="col-10">
                @Model.Id
            </div>

            <div class="col-2">
                <label asp-for="Name" class="form-label"></label>
            </div>
            <div class="col-10">
                @Model.Name
            </div>

            <div class="col-2">
                <label asp-for="Description" class="form-label"></label>
            </div>
            <div class="col-10">
                @Model.Description
            </div>

            <div class="col-2">
                <label asp-for="Price" class="form-label"></label>
            </div>
            <div class="col-10">
                @Model.Price.ToString("C")
            </div>
            
            <div class="col-2">
                <label asp-for="CategoryName" class="form-label"></label>
            </div>
            <div class="col-10">
                @Model.CategoryName
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn btn-outline-primary form-control">Back to list</a>
            </div>

            @if (User.IsInRole(Role.ADMIN))
            {
                <div class="col-5">
                    <input type="submit" class="btn btn-outline-secondary form-control" value="Delete" />
                </div>
            }
        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}