@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Products";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h3 class="text-success">Products</h3>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-success">
                <i class="fas fa-plus"></i> Create New Product
            </a>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td align="right">
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
