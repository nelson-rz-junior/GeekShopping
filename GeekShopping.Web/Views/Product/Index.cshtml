@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Products";
}

<table class="table table-striped table-success">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Category</th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td><img src="@item.ImageUrl" width="200px" /></td>
            <td>@item.ImageUrl</td>
        </tr>
    }
</table>